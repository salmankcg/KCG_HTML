{% extends "./layouts/main.njk" %}
{% set title        = 'KCG' %}
{% set page         = 'about-approach' %}
{% set header       = 'h-white' %}
{% set footer       = 'f-white' %}


{% block content %}


<!-- BEGIN SECTION -->
<section class="section-content">

  <div class="webdoor w-approach">

    <div class="submenu sb-white">
      <a href="about.html" class="item"><span>ABOUT</span></a>
      <a href="about-approach.html" class="item active"><span>APPROACH</span></a>
      <a href="about-team.html" class="item"><span>TEAM</span></a>
    </div>

    <div class="container-fluid">
      <div class="row justify-content-center">

        <div class="col col-10">

          <h1 class="title t-medium t-white t-center"><strong>Our innovate approach is centered<br>around three distinct phases</strong></h1>

          <div class="approach">
            <div class="item" data-video="inovate">
              <div class="wrapper">
                <div class="icon">
                  <div class="i-telescope svg"></div>
                </div>
                <h3>Inovate</h3> 
                <span>For businesses in their <strong>early stages</strong>.</span>
                <p class="paragraph p-white">We deploy thoughtful strategy, cutting-edge technology and creativity to help you get from "idea" to "empire".</p>
              </div>
            </div>
            <div class="item" data-video="create">
              <div class="wrapper">
                <div class="icon">
                  <div class="i-rocket svg"></div>
                </div>
                <h3>Create</h3> 
                <span>For businesses that are ready to launch.</span>
                <p class="paragraph p-white">We enable you to make your mark on the industry and target market in way that is considered, genuine and truly "you".</p>
              </div>
            </div>
            <div class="item" data-video="expand">
              <div class="wrapper">
                <div class="icon">
                  <div class="i-astronaut svg"></div>
                </div>
                <h3>Expand</h3> 
                <span>For businesses that are <strong>established</strong>.</span>
                <p class="paragraph p-white">We help you take on the world by ensuring your journey is efficient, optimized and strategically outstanding. Anything is possible.</p>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>

    <div class="video-background">
      <div class="video" data-target="inovate">
        <div class="v-image" style="background-image: url(assets/about/approach-1.jpg);"></div>
        <video loop muted><source src="assets/about/video1.mp4" type="video/mp4"></video>
      </div>
      <div class="video" data-target="create">
        <div class="v-image" style="background-image: url(assets/about/approach-2.jpg);"></div>
        <video loop muted><source src="assets/about/video2.mp4" type="video/mp4"></video>
      </div>
      <div class="video" data-target="expand">
        <div class="v-image" style="background-image: url(assets/about/approach-3.jpg);"></div>
        <video loop muted><source src="assets/about/video3.mp4" type="video/mp4"></video>
      </div>
    </div>
  </div>

</section>
<!-- END SECTION -->


{% endblock %} 